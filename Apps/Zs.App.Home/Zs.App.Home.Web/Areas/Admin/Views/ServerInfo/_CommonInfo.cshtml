@model Zs.App.Home.Web.Areas.Admin.Models.ServerInfo

<table class="table-bordered alert" cellpadding="3" cellspacing="3" >
    <thead>
        <tr>
            <th> <label style="font-weight: bold"> Parameter </label> </th>
            <th> <label style="font-weight: bold"> Value </label> </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td> @Html.DisplayNameFor(model => Model.Name) </td>
            <td align="center"> @Html.DisplayFor(model => Model.Name) </td>
        </tr>
        <tr>
            <td> @Html.DisplayNameFor(model => Model.CurrentDateGMT) </td>
            <td align="center"> @Html.DisplayFor(model => Model.CurrentDateGMT) </td>
        </tr>
        <tr>
            <td> @Html.DisplayNameFor(model => Model.CurrentDateGMT) </td>
            <td align="center"> @Html.DisplayFor(model => Model.CurrentDateUTC) </td>
        </tr>
        <tr>
            <td valign="top"> @Html.DisplayNameFor(model => Model.IPs) </td>
            <td>
                <ul>
                    @foreach (var ip in Model.IPs)
                    {
                        <li>@Html.DisplayFor(model => ip)</li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>

