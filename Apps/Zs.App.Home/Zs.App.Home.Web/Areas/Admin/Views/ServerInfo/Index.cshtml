@model Zs.App.Home.Web.Areas.Admin.Models.ServerInfo

@{
    Layout = "_Layout";
    ViewData["Title"] = "Server information";
}

<div>
    <fieldset>
        <legend> Common server info </legend>
        <input id="buttonUpdateCommonInfo" type="button" value="Update" />
        <div id="commonInfo">
            @await Html.PartialAsync("_CommonInfo.cshtml", Model)
        </div>
    </fieldset>

    <fieldset>
        <legend>Drives</legend>
        @await Html.PartialAsync("_DrivesTable.cshtml", Model.Drives)
    </fieldset>

    <fieldset>
        <legend>Services (daemons)</legend>
        @await Html.PartialAsync("_DaemonsTable.cshtml", Model.Processes)
    </fieldset>
</div>

@section Scripts
{
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>*@
    <script src="/js/Admin/ServerInfo.js" ></script>
} 
