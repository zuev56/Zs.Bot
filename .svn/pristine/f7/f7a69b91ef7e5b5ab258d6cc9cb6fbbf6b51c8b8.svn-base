using System;
using System.Collections;
using System.Collections.Generic;
using System.ComponentModel;
using System.Linq;
using System.Text;
using Microsoft.EntityFrameworkCore;
using Microsoft.EntityFrameworkCore.Infrastructure;

namespace Zs.Bot.DbModel
{
    /// <summary> Контекст данных ZsBot </summary>
    public interface IZsBotDbContext
    {
        public DbSet<IDbChat>        Chats            { get; set; }
        public DbSet<IDbLog>         Log              { get; set; }
        public DbSet<IDbMessageType> MessageTypes     { get; set; }
        public DbSet<IDbReceivedMsg> ReceivedMessages { get; set; }
        public DbSet<IDbRole>        Roles            { get; set; }
        public DbSet<IDbSentMsg>     SentMessages     { get; set; }
        public DbSet<IDbSession>     Sessions         { get; set; }
        public DbSet<IDbUser>        Users            { get; set; }
        public DbSet<IDbCommand>     Commands          { get; set; }
        public DbSet<IDbSqlResult>   SqlResults        { get; set; }

    }


    /// <summary> Интерфейс для Microsoft.EntityFrameworkCore.IZsDbSet </summary>
    public interface IZsDbSet<TEntity> : IQueryable<TEntity>, IEnumerable<TEntity>, IEnumerable, IQueryable, IAsyncEnumerable<TEntity>, IInfrastructure<IServiceProvider>, IListSource
        where TEntity : class
    {
    }

    public interface IDbChat
    {
        long     ChatId          { get; set; }
        string   ChatTitle       { get; set; }
        string   ChatFirstName   { get; set; }
        string   ChatLastName    { get; set; }
        string   ChatDescription { get; set; }
        string   ChatType        { get; set; }
        string   ChatUserName    { get; set; }
    }
    public interface IDbMessageType
    {
        string MessageTypeName { get; set; }
    }
    public interface IDbRole
    {
        string RoleName { get; set; }
    }
    public interface IDbReceivedMsg
    {
        public long   ReceivedMsgId        { get; set; }
        public long   ChatId               { get; set; }
        public int    ReceivedMsgMessageId { get; set; }
        public string ReceivedMsgText      { get; set; }
        public string MessageTypeName      { get; set; }
        public bool?  IsDeleted            { get; set; }
    }
    public interface IDbSentMsg
    {
        public int    SentMsgId        { get; set; }
        public long   ChatId           { get; set; }
        public int    SentMsgMessageId { get; set; }
        public string SentMsgText      { get; set; }
        public string MessageTypeName  { get; set; }
        public bool   IsDeleted        { get; set; }
    }
    public interface IDbSession
    {
        int  SessionId { get; set; }
        long ChatId    { get; set; }
    }
    public interface IDbUser
    {
        int      UserId         { get; set; }
        string   UserName       { get; set; }
        string   UserManualName { get; set; }
        string   UserFirstName  { get; set; }
        string   UserLastName   { get; set; }
        string   RoleName       { get; set; }
    }
    public interface IDbLog
    {
        int      LogId      { get; set; }
        string   LogType    { get; set; }
        DateTime UpdateDate { get; set; }
        DateTime InsertDate { get; set; }
    }
    public interface IDbCommand
    {
        string CommandName        { get; set; }
        string CommandScript      { get; set; }
        string CommandDefaultArgs { get; set; }
        string CommandDesc        { get; set; }
        string RoleList           { get; set; }
    }
    public interface IDbSqlResult
    {
        string Result { get; set; }
    }
}
