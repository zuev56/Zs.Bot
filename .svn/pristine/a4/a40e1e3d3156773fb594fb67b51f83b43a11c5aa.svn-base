\c postgres postgres
set timezone = 'Europe/Moscow';
DROP DATABASE IF EXISTS "RobotDb";
CREATE DATABASE "RobotDb" WITH ENCODING = 'UTF8';
\connect "RobotDb" postgres;
DROP SCHEMA public;
CREATE SCHEMA bot;
CREATE SCHEMA zl;
CREATE SCHEMA helper;
CREATE EXTENSION IF NOT EXISTS "uuid-ossp" WITH SCHEMA helper;



CREATE OR REPLACE FUNCTION helper.reset_update_date()
RETURNS TRIGGER AS $$
BEGIN
   NEW.update_date = now(); 
   RETURN NEW;
END;
$$ language 'plpgsql';

COMMENT ON FUNCTION helper.reset_update_date()
    IS 'Общая триггерная функция обовления поля update_date';
	