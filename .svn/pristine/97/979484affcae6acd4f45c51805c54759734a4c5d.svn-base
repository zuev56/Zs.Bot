using System;
using System.ComponentModel.DataAnnotations;
using System.ComponentModel.DataAnnotations.Schema;
using Microsoft.EntityFrameworkCore;

namespace Zs.Service.ChatAdmin.DbModel
{
<#
PushIndent("    ");
    try
    {
        var projectDir          = Host.ResolveAssemblyReference("$(ProjectDir)");
        var tableToClassMapPath = $@"{projectDir}\DbModel\TableNameToClassNameMap.txt";
        var connectionString    = "Host=localhost;Port=5632;Username=postgres;Password=postgres;Database=Robot;";
        var tableToClassNameMap = ModelGenerator.GetTableNameToClassNameMap(tableToClassMapPath);
        var databaseInfo        = DbReader.GetDbInfo(connectionString, "zl");
        
        ModelGenerator.GenerateClasses(
            this,
            databaseInfo,
            "public",
            "Db",
            true,
            tableToClassNameMap
        );
    }
    catch (Exception ex)
    {
        if (ex.InnerException != null)
        {
            WriteLine($"{ex.InnerException.Message}");
            WriteLine("");
            WriteLine($"{ex.InnerException.StackTrace}");
        }

        WriteLine($"{ex.Message}");
        WriteLine("");
        WriteLine($"{ex.StackTrace}");
    }
    PopIndent();
#>
}